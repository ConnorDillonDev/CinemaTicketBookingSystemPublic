@page

@model WebApp.Pages.LoginModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using UWS.CinemaTicketBookingSystem;


<div class="row">
    <h1 class="display-3">Login Account</h1>
</div>
<div class="card">
    <form method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="PasswordInput">Password</label>
            <input type="password" class="form-control" id="PasswordInput" placeholder="Password" asp-for="Password" required/>
            <input type="checkbox" asp-for="RememberMe" class="btn btn-primary" id="Password"/>
            <label class="form-check-label" asp-for="RememberMe">Keep me logged in </label>
            <br/>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="../Create/CreateAccount">Create Account?</a>
    </form>
</div>
